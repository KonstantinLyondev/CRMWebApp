@page
@model CRMWebApp.Areas.Identity.Pages.Account.Manage.ConfirmEmailChangeWithPasswordModel
@{
    ViewData["Title"] = "Confirm email change";
}

<div class="container mt-4">
    <h1 class="mb-3">Confirm email change</h1>


    <form method="post">
        <input type="hidden" asp-for="Input.UserId" />
        <input type="hidden" asp-for="Input.Email" />
        <input type="hidden" asp-for="Input.Code" />

        <div class="mb-3">
            <label class="form-label">New email</label>
            <input class="form-control" value="@Model.Input.Email" disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Confirm change</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
