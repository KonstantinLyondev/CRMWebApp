@page
@model CRMWebApp.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">
                    <h1 class="h3 mb-2 fw-bold">@ViewData["Title"]</h1>
                    <p class="text-secondary mb-4">Enter the email you used to register.</p>

                    <form method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email"
                                   class="form-control"
                                   autocomplete="username"
                                   aria-required="true"
                                   placeholder="email@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">Reset Password</button>

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-area="" asp-page="/Index" class="link-secondary">Home</a>
                            <a asp-area="Identity" asp-page="/Account/Login" class="link-secondary">Back to login</a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3 small text-muted">
                &copy; @DateTime.UtcNow.Year - CRMWebApp
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
