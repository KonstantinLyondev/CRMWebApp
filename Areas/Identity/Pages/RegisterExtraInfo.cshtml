@page
@model CRMWebApp.Areas.Identity.Pages.RegisterExtraInfoModel
@{
    ViewData["Title"] = "Tell us more about you";
}

<div class="container mt-5">
    <div class="card shadow rounded p-4">
        <h2 class="text-center mb-4">Tell us more about you</h2>

        <form method="post" novalidate>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Email" />

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <label asp-for="Input.FullName" class="form-label">Full Name</label>
                <input asp-for="Input.FullName" class="form-control" placeholder="Enter your full name" />
                <span asp-validation-for="Input.FullName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Company" class="form-label">Company Name</label>
                <input asp-for="Input.Company" class="form-control" placeholder="Enter your company name" />
                <span asp-validation-for="Input.Company" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>

                <a asp-area="Identity"
                   asp-page="/Account/RegisterConfirmation"
                   asp-route-email="@Model.Email"
                   class="btn btn-outline-secondary">
                    Skip
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
