@page "{id:int}"
@model CRMWebApp.Pages.Interactions.DetailsModel

@{
    ViewData["Title"] = "Interaction Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Interaction Details</h1>

    <div class="form-container">
        <dl class="row">
            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Interaction.Date.ToString("M/d/yyyy h:mm tt")</dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.Interaction.Type</dd>

            <dt class="col-sm-3">Comment</dt>
            <dd class="col-sm-9">
                @(string.IsNullOrWhiteSpace(Model.Interaction.Comment) ? "No comment" : Model.Interaction.Comment)
            </dd>

            <dt class="col-sm-3">Client</dt>
            <dd class="col-sm-9">
                @if (Model.Interaction.Client != null)
                {
                    <a asp-page="/Clients/Details" asp-route-id="@Model.Interaction.Client.Id">
                        @Model.Interaction.Client.Name
                    </a>
                }
                else
                {
                    <span>—</span>
                }
            </dd>

            <dt class="col-sm-3">Deal</dt>
            <dd class="col-sm-9">
                @if (Model.Interaction.Deal != null)
                {
                    <a asp-page="/Deals/Details" asp-route-id="@Model.Interaction.Deal.Id">
                        @Model.Interaction.Deal.Title
                    </a>
                }
                else
                {
                    <span>No deal attached</span>
                }
            </dd>

            @if (User.IsInRole("Admin"))
            {
                <dt class="col-sm-3">Created by</dt>
                <dd class="col-sm-9">@(Model.Interaction.CreatedBy?.Email ?? "—")</dd>
            }
        </dl>

        <div class="d-flex gap-2 mt-4">
            <a asp-page="./Edit" asp-route-id="@Model.Interaction.Id" class="btn btn-edit btn-edit-details">Edit</a>
            <a asp-page="./Index" class="btn btn-cancel">Back to List</a>
        </div>
    </div>
</div>
