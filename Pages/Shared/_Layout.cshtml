@using Microsoft.AspNetCore.Identity
@using CRMWebApp.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "ClientFlow")</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https:    <link rel="stylesheet" href="~/CRMWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    @{
                var me = await UserManager.GetUserAsync(User);
        var has2fa = me != null && await UserManager.GetTwoFactorEnabledAsync(me);

        bool showAdminMenu =
        User?.Identity?.IsAuthenticated == true
        && User.IsInRole("Admin")
        && has2fa;     }

    <div class="wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm mb-3">
                <div class="container">
                    <a class="navbar-brand" href="~/">ClientFlow</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item"><a class="nav-link text-dark" href="~/">Home</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-page="/Clients/Index">Clients</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-page="/Interactions/Index">Interactions</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-page="/Deals/Index">Deals</a></li>
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/dashboard", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                                   asp-area="" asp-page="/Dashboard/Index">Dashboard</a>
                            </li>

                            @if (showAdminMenu)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="adminMenu"
                                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Admin
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminMenu">
                                        <li><a class="dropdown-item" asp-page="/Admin/Users/Index">Manage Users</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/AuditLogs/Index">Audit Logs</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">@await Html.PartialAsync("_LoginPartial")</li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="container pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted py-3 text-center no-shadow">
        <div style="max-width: 1100px; margin: 0 auto;">
            &copy; 2025 - CRMWebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (User?.HasClaim("Impersonating", "true") == true)
    {
        <div class="impersonation-bar position-fixed bottom-0 start-0 end-0 bg-warning border-top py-3 px-3 d-flex justify-content-center align-items-center"
             style="z-index:1030;">
            <span class="me-3 text-dark fw-medium">You are impersonating another user.</span>
            <form method="post" asp-page="/Admin/Users/StopImpersonation" class="d-inline">
                <button type="submit" class="btn btn-sm btn-dark">Stop impersonation</button>
            </form>
        </div>
    }
</body>
</html>
