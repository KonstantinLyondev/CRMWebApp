@page
@model CRMWebApp.Pages.Clients.DeleteModel

@{
    ViewData["Title"] = "Delete Client";
}

@section Styles {
    <style>
        #confirmDeleteModal {
            z-index: 3000 !important;
        }

        .modal-backdrop {
            display: none !important;
        }

        .impersonation-bar {
            z-index: 1030 !important;
        }

        .modal-open .impersonation-bar {
            display: none !important;
        }
    </style>
}

<div class="container mt-4">
    <h1 class="mb-4">Delete</h1>

    <h5 class="mb-4 text-danger">Are you sure you want to delete this?</h5>

    <div class="mb-4">
        <h6 class="text-muted">Client</h6>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Client.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Client.Email</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Client.Phone</dd>

            <dt class="col-sm-3">City</dt>
            <dd class="col-sm-9">@Model.Client.City</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Client.Address</dd>

            <dt class="col-sm-3">Company</dt>
            <dd class="col-sm-9">@Model.Client.Company</dd>

            <dt class="col-sm-3">VIP</dt>
            <dd class="col-sm-9">
                @if (Model.Client.IsVip)
                {
                    <span class="badge bg-warning text-dark">VIP</span>
                }
                else
                {
                    <span class="text-muted">No</span>
                }
            </dd>
        </dl>
    </div>

    <form id="deleteForm" method="post" class="mt-4 d-flex gap-2">
        <input type="hidden" asp-for="Client.Id" />
        <button type="button"
                class="btn btn-danger"
                data-bs-toggle="modal"
                data-bs-target="#confirmDeleteModal">
            Delete
        </button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

<div class="modal fade"
     id="confirmDeleteModal"
     tabindex="-1"
     aria-labelledby="confirmDeleteModalLabel"
     aria-hidden="true"
     data-bs-backdrop="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p class="mb-2">
                    Are you sure you want to delete client <strong>@Model.Client.Name</strong>?
                </p>
                <p class="mb-0">
                    This action will also remove <strong>@Model.DealsCount</strong> deal(s) and
                    <strong>@Model.InteractionsCount</strong> interaction(s) linked to this client.
                </p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-danger rounded-pill"
                        onclick="document.getElementById('deleteForm').submit();">
                    Delete anyways
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

}
